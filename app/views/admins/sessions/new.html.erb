<div class="row">
  <section class="col-12 col-lg-8 col-xl-6 mx-auto">
    <h2><%= t(:service_name) %> <%= t(:login_title) %></h2>
    <%= form_for(resource, as: :user, url: user_session_path, html: { class: "form-horizontal", role: "form" , data: { turbo: false }}) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= hidden_field_tag :admin_login, true %>
      <div class="card">
        <div class="card-body p-4">
          <div class="form-group row">
            <label for="sl_email" class="col-sm-2 col-form-label text-right"><%= t(:email) %></label>
            <div class="col-sm-10">
              <%= f.text_field :email, :autofocus => true, :class => "form-control form-control-lg", :required => "required", :placeholder => t(:login_p_email) %>
            </div>
          </div>
          <div class="form-group row mt-3">
            <label for="sl_password" class="col-sm-2 col-form-label text-right"><%= t(:password) %></label>
            <div class="col-sm-10">
              <%= f.password_field :password, :class => "form-control form-control-lg", :required => "required", :placeholder => t(:login_p_password) %>
            </div>
          </div>
          <div class="form-group row mt-3">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.check_box :remember_me, data: {
                controller: "login",
                action: "change->login#handleRememberMe"
              }
              %>
              <%= f.label :remember_me %>
            </div>
          </div>
        </div>
      </div>
      <div class="d-grid gap-2 mt-3">
        <button type="submit" class="btn btn-primary btn-lg"><%= t(:login) %></button>
      </div>
    <% end %>
  </section>
</div>
