<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class=>'form-horizontal' }, data: { turbo: false }) do |f| %>
	<%= render "users/shared/error_messages", resource: resource %>
	<div class="form-group">
		<%= f.label :email, :class=>"col-sm-2 form-label fs-5" %>
		<div class="col-sm-10">
			<%= f.email_field :email,:class=>'form-control form-control-lg',:required=>'required' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :password, :class=>"col-sm-2 form-label fs-5" %>
		<div class="col-sm-10">
			<%= f.password_field :password,:class=>'form-control form-control-lg',:required=>'required' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit '로그인',:class=>'btn btn-lg btn-primary' %>
		</div>
	</div>
<% end %>
