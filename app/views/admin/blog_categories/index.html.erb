<div class="col-12">
	<h2 class="float-start hidden-title"><%= t(:blog_list) %></h2>
	<div class="float-end">
		<p class="summary">
			<span id="list_count" style="display:none"><%=@blog_categories_count %></span>
			<%=raw t(:there_are_n_blog_categories,count: @blog_category_count) %>
		</p>
	</div>
</div>
<article class="col-12">
	<table class="table table-striped table-hover">
		<colgroup>
			<col style="width:120px">
			<col />
			<col style="width:100px;" />
			<col style="width:100px" />
			<col style="width:130px" />
			<% if can?(:update, BlogCategory) || can?(:delete, BlogCategory) %>
				<col <%= raw manage_width(BlogCategory) %> />
			<% end %>
		</colgroup>
		<thead class="thead-default">
		<tr>
			<th class="text-center"><%= t(:enable,scope:[:activerecord,:attributes,:blog]) %></th>
			<th><%=t(:title,scope:[:activerecord,:attributes,:blog_category]) %></th>
			<th><%=t(:blogs_count,scope:[:activerecord,:attributes,:blog_category]) %></th>
			<th><%=t(:enable,scope:[:activerecord,:attributes,:blog_category]) %></th>
			<th><%=t(:created_at,scope:[:activerecord,:attributes,:blog_category]) %></th>
			<% if can?(:update, BlogCategory) || can?(:delete, BlogCategory) %>
				<th><%= t(:label_manage) %></th>
			<% end %>
		</tr>
		</thead>
		<tbody>
			<% unless @blog_category_count.zero? %>
			<% @blog_categories.each do |blog_category,index| %>
				<tr>
					<td>
						<div class="form-check form-switch">
							<input
								class="form-check-input"
								type="checkbox"
								id="notice_display<%= index %>"
								value="<%= blog_category.id %>"
								<% if blog_category.enable %> checked <% end %>
							>
							<label class="form-check-label" for="notice_display<%= index %>">
								<% if blog_category.enable %> <%= t(:display) %> <% else %> <%= t(:hidden) %> <% end %>
							</label>
						</div>
					</td>
					<td><%= link_to blog_category.title,admin_blog_category_path(blog_category) %></td>
					<td><%= link_to blog_category.blogs_count,admin_blog_category_path(blog_category) %></td>
					<td><%= raw flagToString(blog_category.enable) %></td>
					<td><%= blog_category.created_at.to_date %></td>
					<% if can?(:update, blog_category) or can?(:delete, blog_category) %>
						<td class="text-right">
							<% if can? :update, blog_category %>
								<%= link_to edit_admin_blog_category_path(blog_category), :class => "btn btn-secondary" do %>
									<%= t(:edit) %>
								<% end %>
							<% end %>
							<% if can? :delete, blog_category %>
								<%= link_to admin_blog_category_path(blog_category), :method => :delete, :data => { :confirm => t(:delete_confirm) }, :class => "btn btn-danger" do %>
									<%= t(:delete) %>
								<% end %>
							<% end %>
						</td>
					<% end %>
				</tr>
			<% end %>
		<% else %>
			<tr>
				<td colspan="8" class="text-center"><%= t(:no_data) %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
	<div class="pagination justify-content-center">
		<%= paginate @blog_categories %>
	</div>
	<%= link_to t(:add), new_admin_blog_category_path, :class => "btn btn-primary" %>
</article>