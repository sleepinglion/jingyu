<div class="col-12">
	<h2 class="float-start hidden-title"><%= t(:blog_list) %></h2>
	<div class="float-end">
		<p class="summary">
			<span id="list_count" style="display:none"><%=@guest_book_count %></span>
			<%=raw t(:there_are_n_guest_books,count: @guest_book_count) %>
		</p>
	</div>
</div>
<article class="col-12">
	<table class="table table-striped table-hover">
		<colgroup>
			<col style="width:120px">
			<col>
			<col>
			<col>
			<col style="width:100px">
			<col style="width:210px">
			<% if can?(:update, GuestBook) || can?(:delete, GuestBook) %>
				<col <%=manage_width(GuestBook) %>>
			<% end %>
		</colgroup>
		<thead class="thead-default">
		<tr>
			<th class="text-center"><%= t(:enable,scope:[:activerecord,:attributes,:blog]) %></th>
			<th><%= t(:title,scope:[:activerecord,:attributes,:blog]) %></th>
			<th><%= t(:blog_category_id, scope: [:activerecord, :attributes, :blog]) %></th>
			<th class="text-right"><%= t(:picture,scope:[:activerecord,:attributes,:blog_picture]) %></th>
			<th class="text-right"><%= t(:label_count) %></th>
			<th class="text-right"><%= t(:created_at,scope:[:activerecord,:attributes,:blog]) %></th>
			<% if can?(:update, GuestBook) || can?(:delete, GuestBook) %>
				<th class="text-center"><%= t(:manage) %></th>
			<% end %>
		</tr>
		</thead>
		<tbody>
		<% unless @guest_book_count.zero? %>
			<% @guest_books.each_with_index do |guest_book,index| %>
				<tr>
					<td>
						<div class="form-check form-switch">
							<input
								class="form-check-input"
								type="checkbox"
								id="notice_display<%= index %>"
								value="<%= guest_book.id %>"
								<% if guest_book.enable %> checked <% end %>
							>
							<label class="form-check-label" for="notice_display<%= index %>">
								<% if guest_book.enable %> <%= t(:display) %> <% else %> <%= t(:hidden) %> <% end %>
							</label>
						</div>
					</td>
					<td><%= link_to guest_book.title,admin_guest_book_path(guest_book) %></td>
					<td></td>
					<td class="text-right">

					</td>
					<td class="text-right"><%= guest_book.impressionist_count(:filter => :ip_address) %></td>
					<td class="text-right"><%= I18n.l guest_book.created_at.to_date, :format => :long %></td>
					<% if can?(:update, guest_book) or can?(:delete, guest_book) %>
						<td class="text-right">
							<% if can? :update, guest_book %>
								<%= link_to admin_guest_book_path(guest_book), :class => "btn btn-secondary" do %>
									<%= t(:edit) %>
								<% end %>
							<% end %>
							<% if can? :delete, guest_book %>
								<%= link_to admin_guest_book_path(guest_book), :method => :delete, :data => { :confirm => t(:delete_confirm) }, :class => "btn btn-danger" do %>
									<%= t(:delete) %>
								<% end %>
							<% end %>
						</td>
					<% end %>
				</tr>
			<% end %>
		<% else %>
			<tr>
				<td colspan="8" class="text-center"><%= t(:no_data) %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
	<div class="pagination justify-content-center">
		<%= paginate @guest_books %>
	</div>
	<%= link_to t(:add), new_admin_guest_book_path, :class => "btn btn-primary" %>
</article>
