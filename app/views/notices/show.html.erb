<% breadcrumb :notice,@notice %>
<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<article id="sl_notice_show" itemscope itemprop="article" itemtype="http://schema.org/Article">
  <div class="slboard_content">
    <div class="sl_content_header">
      <h3 itemprop="name"><%= @notice.title %></h3>
      <p><%=t(:label_name)%> : <span  itemprop="author"><%=userName(@notice,10) %></span>&nbsp;&nbsp;&nbsp; <%=t(:label_created_at)%> : <span itemprop="dateCreated"><%= @notice.created_at %></span><span class="none" itemprop="dateModified"><%= @notice.updated_at %></span></p>
    </div>
    <div class="sl_content_main">
      <div class="sl_content_text" itemprop="text"><%=simple_format @notice.notice_content.content %></div>
    </div>
  </div>
  <div class="row">
    <div class="btn-group btn-group-lg col-12" role="group" style="margin-top:3rem">
      <%=link_to t(:link_list),notices_path,{class: 'btn btn-secondary btn-large btn-block'} %>
    </div>
  </div>
</article>
